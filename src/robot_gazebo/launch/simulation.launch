<?xml version="1.0"?>
<launch>
  <!--set up gazebo for simulation-->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find robot_gazebo)/worlds/robot.world"/> <!-- Note: the world_name is with respect to GAZEBO_RESOURCE_PATH environmental variable -->
  </include>
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-file $(find robot_description)/urdf/robot.urdf -urdf -x 0 -y 0 -z 1 -model robot" />
  
  
  <param name="robot_description" value="$(find robot_description)/urdf/robot.urdf" />
  <param name="robot_description" command="$(find xacro)/xacro.py $(find robot_description)/urdf/robot.urdf" />
  <!-- Robot_state_publisher: needed for all the tf transformations -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" >
      <param name="publish_frequency" type="double" value="20" />
  </node>

 
</launch>